  if (IsBooked) {
        DOCTOR_BOOKED.innerText = "booked";
        DOCTOR_BOOKED.className = "booked";
    }
    else {
        DOCTOR_BOOKED.innerText = "available";
        DOCTOR_BOOKED.className = "available";
